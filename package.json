{
  "private": true,
  "name": "monorepo-prisma",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "dev": "yarn workspaces run dev",
    "start": "yarn workspaces run start",
    "image:build": "docker buildx build --no-cache --progress=plain -t tyrauber/monorepo-prisma .",
    "image:start": "docker run -p 8080:8080 -p 3000:3000 tyrauber/monorepo-prisma"
  },
  "devDependencies": {
    "@types/node": "^14.14.12",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
